{
  "brand": {
    "logo": {
      "primary": {
        "light": "/images/logo-square-light.svg",
        "dark": "/images/logo-square-g.svg"
      },
      "usage": {
        "navbar": "logo-square-light.svg",
        "footer": "logo-square-g.svg"
      }
    },
    "colors": {
      "primary": {
        "emerald": {
          "50": "#f0fdf4",
          "100": "#dcfce7",
          "200": "#bbf7d0",
          "300": "#86efac",
          "400": "#4ade80",
          "500": "#22c55e",
          "600": "#16a34a",
          "700": "#15803d",
          "800": "#166534",
          "900": "#14532d"
        }
      },
      "neutral": {
        "slate": {
          "50": "#f8fafc",
          "100": "#f1f5f9",
          "200": "#e2e8f0",
          "300": "#cbd5e1",
          "400": "#94a3b8",
          "500": "#64748b",
          "600": "#475569",
          "700": "#334155",
          "800": "#1e293b",
          "900": "#0f172a",
          "950": "#020617"
        },
        "white": "#ffffff",
        "black": "#000000"
      },
      "semantic": {
        "success": "#22c55e",
        "error": "#ef4444",
        "warning": "#f59e0b",
        "info": "#3b82f6"
      }
    },
    "typography": {
      "fontFamily": "'Inter', system-ui, -apple-system, sans-serif",
      "fallback": "Helvetica, sans-serif",
      "scale": {
        "h1": {
          "size": "text-4xl lg:text-6xl",
          "weight": "font-black",
          "tracking": "tracking-tight",
          "lineHeight": "leading-tight"
        },
        "h2": {
          "size": "text-3xl lg:text-4xl",
          "weight": "font-black",
          "tracking": "tracking-tight"
        },
        "h3": {
          "size": "text-2xl",
          "weight": "font-bold"
        },
        "h4": {
          "size": "text-xl",
          "weight": "font-bold"
        },
        "body": {
          "size": "text-lg",
          "weight": "font-normal",
          "lineHeight": "leading-relaxed"
        },
        "caption": {
          "size": "text-sm",
          "weight": "font-medium",
          "lineHeight": "leading-relaxed"
        }
      },
      "weights": ["100", "200", "300", "400", "500", "600", "700", "800", "900"]
    },
    "spacing": {
      "scale": ["4px", "8px", "12px", "16px", "20px", "24px", "32px", "40px", "48px", "64px", "80px", "96px", "128px"],
      "tokens": {
        "0": "0px",
        "1": "4px",
        "2": "8px",
        "3": "12px",
        "4": "16px",
        "5": "20px",
        "6": "24px",
        "8": "32px",
        "10": "40px",
        "12": "48px",
        "16": "64px",
        "20": "80px",
        "24": "96px",
        "32": "128px"
      }
    },
    "borderRadius": {
      "none": "0px",
      "sm": "2px",
      "default": "4px",
      "md": "6px",
      "lg": "8px",
      "xl": "12px",
      "2xl": "16px",
      "3xl": "24px",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
      "default": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
      "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
      "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
      "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)",
      "2xl": "0 25px 50px -12px rgb(0 0 0 / 0.25)",
      "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)"
    },
    "transitions": {
      "all": "transition-all",
      "colors": "transition-colors",
      "opacity": "transition-opacity",
      "transform": "transition-transform",
      "duration": {
        "75": "75ms",
        "100": "100ms",
        "150": "150ms",
        "200": "200ms",
        "300": "300ms",
        "500": "500ms",
        "700": "700ms",
        "1000": "1000ms"
      }
    }
  },
  "components": {
    "atoms": {
      "button": {
        "variants": {
          "primary": {
            "class": "bg-emerald-600 text-white hover:bg-emerald-700",
            "usage": "Main call-to-action buttons"
          },
          "secondary": {
            "class": "bg-white text-slate-800 border-2 border-slate-200 hover:border-emerald-300 hover:bg-emerald-50",
            "usage": "Secondary actions"
          },
          "outline": {
            "class": "border-2 border-slate-200 hover:border-emerald-500 hover:text-emerald-600",
            "usage": "Tertiary actions"
          },
          "ghost": {
            "class": "text-slate-600 hover:text-slate-900 hover:bg-slate-100",
            "usage": "Subtle actions"
          }
        },
        "sizes": {
          "sm": "px-4 py-2 text-sm",
          "md": "px-6 py-3 text-base",
          "lg": "px-8 py-4 text-lg"
        },
        "states": {
          "default": "font-bold rounded-xl shadow-sm",
          "hover": "hover:-translate-y-1 hover:shadow-lg",
          "disabled": "disabled:opacity-70 disabled:cursor-not-allowed"
        }
      },
      "input": {
        "class": "w-full px-4 py-3 rounded-xl border border-slate-200 focus:border-emerald-500 focus:ring-2 focus:ring-emerald-200 outline-none",
        "states": {
          "default": "text-slate-900",
          "focus": "focus:ring-emerald-200",
          "error": "border-red-500 focus:ring-red-200"
        }
      },
      "badge": {
        "class": "inline-flex items-center gap-2 px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider",
        "variants": {
          "emerald": "bg-emerald-100 text-emerald-800",
          "slate": "bg-slate-100 text-slate-800",
          "red": "bg-red-100 text-red-800"
        }
      },
      "icon": {
        "sizes": {
          "sm": "w-4 h-4",
          "md": "w-6 h-6",
          "lg": "w-8 h-8",
          "xl": "w-12 h-12"
        }
      }
    },
    "molecules": {
      "card": {
        "variants": {
          "default": {
            "class": "bg-white rounded-2xl p-6 border border-slate-100 shadow-sm hover:shadow-lg",
            "usage": "Standard content card"
          },
          "highlight": {
            "class": "bg-white rounded-[2rem] p-10 border border-slate-200 shadow-xl hover:border-emerald-500",
            "usage": "Featured content card"
          },
          "dark": {
            "class": "bg-slate-900 rounded-2xl p-6 text-white",
            "usage": "Dark theme card"
          }
        },
        "states": {
          "hover": "hover:shadow-xl hover:-translate-y-1 transition-all"
        }
      },
      "modal": {
        "class": "fixed inset-0 z-50 flex items-center justify-center p-4",
        "backdrop": "absolute inset-0 bg-slate-900/60 backdrop-blur-sm",
        "content": "relative bg-white rounded-3xl shadow-2xl w-full max-w-lg overflow-hidden animate-in fade-in zoom-in-95 duration-200",
        "header": "bg-emerald-600 px-8 py-6 text-white flex justify-between items-start"
      },
      "timeline": {
        "class": "relative pl-8 border-l-2 border-slate-100",
        "item": {
          "class": "mb-16 relative",
          "marker": "absolute -left-[41px] top-0 w-6 h-6 rounded-full ring-4 ring-white",
          "markerVariants": {
            "current": "bg-emerald-500",
            "future": "bg-slate-200 text-slate-400",
            "past": "bg-emerald-500"
          }
        }
      }
    },
    "organisms": {
      "navbar": {
        "class": "sticky top-0 z-50 glass border-b border-slate-200/50 bg-white/90 backdrop-blur-md",
        "height": "h-20",
        "logo": "w-10 h-10 rounded-lg overflow-hidden mr-3 shadow-lg shadow-emerald-100 bg-white",
        "menu": {
          "desktop": "hidden lg:flex items-center space-x-2",
          "mobile": "lg:hidden bg-white border-t border-slate-200 shadow-xl absolute w-full left-0 z-50"
        }
      },
      "footer": {
        "class": "bg-slate-950 text-white mt-auto border-t border-slate-800",
        "grid": "grid grid-cols-1 md:grid-cols-4 gap-12",
        "logo": "w-8 h-8 rounded-lg overflow-hidden bg-white",
        "social": "w-8 h-8 bg-slate-800 rounded-full flex items-center justify-center hover:bg-emerald-600"
      },
      "hero": {
        "class": "relative z-10 max-w-3xl mx-auto",
        "title": "text-4xl lg:text-6xl font-black tracking-tight leading-tight mb-6 drop-shadow-lg",
        "subtitle": "text-lg lg:text-xl text-slate-600 leading-relaxed mb-8 max-w-xl"
      },
      "grid": {
        "container": "max-w-7xl mx-auto",
        "columns": {
          "2": "grid md:grid-cols-2 gap-8",
          "3": "grid md:grid-cols-3 gap-8",
          "4": "grid md:grid-cols-4 gap-8"
        }
      }
    }
  },
  "patterns": {
    "layout": {
      "appShell": {
        "description": "Main application layout with navbar, main content, and footer",
        "structure": ["Navbar", "Main Content", "Footer"]
      },
      "landingPage": {
        "description": "Landing page structure with hero section and feature cards",
        "structure": ["Hero", "Features Grid", "Call-to-Action"]
      },
      "dashboard": {
        "description": "Dashboard layout with sidebar and main content",
        "structure": ["Sidebar", "Main Content"]
      }
    },
    "navigation": {
      "mainNavigation": {
        "description": "Primary navigation with logo and menu items",
        "components": ["Logo", "Navigation Menu", "Mobile Menu Button"]
      },
      "breadcrumb": {
        "description": "Breadcrumb navigation for hierarchical pages",
        "components": ["Breadcrumb Items", "Separator"]
      }
    },
    "forms": {
      "contactForm": {
        "description": "Contact form with name, email, organization, and message fields",
        "components": ["Input", "Textarea", "Button"]
      },
      "searchBar": {
        "description": "Search bar with input and submit button",
        "components": ["Input", "Button"]
      }
    },
    "dataVisualization": {
      "cardGrid": {
        "description": "Grid of cards displaying data or features",
        "components": ["Card", "Grid"]
      },
      "timeline": {
        "description": "Timeline showing chronological events or roadmap",
        "components": ["Timeline", "Timeline Item"]
      }
    },
    "feedback": {
      "errorState": {
        "description": "Error state with message and retry option",
        "components": ["Error Message", "Retry Button"]
      },
      "emptyState": {
        "description": "Empty state with message and call-to-action",
        "components": ["Empty Message", "Call-to-Action"]
      },
      "loadingState": {
        "description": "Loading state with spinner and message",
        "components": ["Spinner", "Loading Message"]
      }
    }
  }
}